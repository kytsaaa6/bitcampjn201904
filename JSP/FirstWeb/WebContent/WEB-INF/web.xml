<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>FirstWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  
  <!-- 프로그램 전체에서 공유가능한 데이터 등록 -->
  <context-param>
  	<description>logEnabled</description>
  	<param-name>logEnabled</param-name>
  	<param-value>false</param-value>
  </context-param>
  
  <context-param>
  	<param-name>debugLevel</param-name>
  	<param-value>1</param-value>
  </context-param>
  
  <!--  서블릿 등록 : 서블릿 이름, 클래스 이름(패키지명을 포함하는 풀네임 등록)  -->
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<servlet-class>web.HelloServlet</servlet-class>
  </servlet>
  
  
  <!-- 사용자 요청 URL 등록 -->
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  
  <!-- 에러페이지 지정 -->
  <!-- 우선순위 -->
  <!-- 
  1. jsp 파일내 디렉티브의 errorPage 속성
  2. web.xml 내 예외타입과 동일한 경우
  3. web.xml 내 예외코드와 동일한 경우 -->
  <!-- http 코드로 지정 -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/errorpage/viewError404.jsp</location>
  </error-page>
    <error-page>
  	<error-code>500</error-code>
  	<location>/errorpage/viewError500.jsp</location>
  </error-page>
  
  <!-- 에러타입으로 지정 -->
  <error-page>
  	<exception-type>java.lang.NullPointerException</exception-type>
  	<location>/errorpage/viewErrorNull.jsp</location>
  </error-page>
  
  <!-- 자동 코드 추가 설정 -->
  <jsp-config>
  	<jsp-property-group>
  		<url-pattern>/actiontag/view/*</url-pattern>
  		<include-prelude>/common/variable.jspf</include-prelude>
  		<include-coda>/common/footer.jspf</include-coda>
  	</jsp-property-group>
  </jsp-config>
  
  
</web-app>
